<section>  
    <div id="map-container">

        <h1>Mapa de Google</h1>
        <p>A continuación se muestra un mapa de Google:</p>
        <div id="map"></div>
    
        <script>
            function iniciarMap() {
                // Crear mapa
                var map = new google.maps.Map(document.getElementById('map'), {
                    center: {lat: 4.6097100, lng: -74.0817500}, // Coordenadas de Bogotá
                    zoom: 12
                });
            }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?callback=iniciarMap" async defer></script>
    </div>

</section>